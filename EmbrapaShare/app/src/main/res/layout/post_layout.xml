<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- header -->
    <LinearLayout
        android:paddingTop="@dimen/post_header_padding"
        android:paddingLeft="@dimen/post_header_padding"
        android:paddingRight="@dimen/post_header_padding"
        android:paddingBottom="@dimen/post_header_padding"
        android:layout_width="match_parent"
        android:layout_height="@dimen/post_header_height"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/userPhoto"
            android:layout_width="@dimen/user_photo_width"
            android:layout_height="@dimen/user_photo_height" />

        <RelativeLayout
            android:paddingLeft="@dimen/post_header_padding"
            android:layout_width="fill_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="@dimen/user_photo_height"
                android:textSize="@dimen/user_name_size"/>
        </RelativeLayout>


    </LinearLayout>

    <!-- content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/postImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/postName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

</LinearLayout>