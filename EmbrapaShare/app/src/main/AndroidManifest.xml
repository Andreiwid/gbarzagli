<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.it.turtle.embrapashare">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".socialnetwork.views.ConnectActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".socialnetwork.views.CulturePickerActivity"
            android:label="@string/title_activity_culture_picker"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".socialnetwork.views.AddCultureActivity"
            android:label="@string/title_activity_add_culture"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".socialnetwork.views.TomateActivity" />
        <activity android:name=".socialnetwork.views.MelanciaActivity" />
        <activity
            android:name=".socialnetwork.views.CafeActivity"
            android:label="@string/title_activity_cafe"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>