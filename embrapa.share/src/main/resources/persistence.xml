<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="calendar">

        <class>br.edu.ifsp.tcc.gbarzagli.embrapa.share.model.Image</class>
        <class>br.edu.ifsp.tcc.gbarzagli.embrapa.share.model.Plant</class>
        <class>br.edu.ifsp.tcc.gbarzagli.embrapa.share.model.Researcher</class>
        <class>br.edu.ifsp.tcc.gbarzagli.embrapa.share.model.Post</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/digipathos" />
            <property name="javax.persistence.jdbc.user" value="postgres" />
            <property name="javax.persistence.jdbc.password" value="root" />

            <!-- Configurações específicas do Hibernate -->
			<!-- Dialeto do SGBD para a geração do SQL específico/adequado -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>

            <!-- Causa criação/alteração automática de uma Tabela no Banco de Dados
			     para cada Entidade/Modelo mapeado pelo Hibernate -->
            <property name="hibernate.hbm2ddl.auto" value="update" />

            <!-- Mostra as SQLs geradas pelo framework -->
            <property name="hibernate.show_sql" value="true"/>
			<property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>

</persistence>